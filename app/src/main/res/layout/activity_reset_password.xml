<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.credentials.Reset_PasswordActivity">

    <ScrollView
        android:id="@+id/login_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >




    <ImageView
        android:id="@+id/ic_resetPassword"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_reset_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foregroundGravity="center"
        android:layout_marginStart="35dp"
        android:layout_marginTop="100dp"
         />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:textSize="32sp"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/splash_screen_cl"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ic_resetPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="32sp"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/splash_screen_cl"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
       />

    <EditText
        android:id="@+id/et_newPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:hint="@string/new_password"
        android:padding="10dp"
        android:background="@drawable/login_edit_text_bg"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="15dp"
        android:singleLine="true"
        android:textColor="#2B2929"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/et_confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       app:layout_constraintTop_toBottomOf="@id/et_newPassword"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_edit_text_bg"
        android:layout_marginHorizontal="30dp"
        android:hint="@string/confirm_new_password"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#2B2929"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:background="@drawable/login_button_bg"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_new_password"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>