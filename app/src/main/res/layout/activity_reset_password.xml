<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.credentials.Reset_PasswordActivity">

    <ScrollView
        android:id="@+id/reset_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >




    <ImageView
        android:id="@+id/ic_resetPassword"
        android:layout_width="@dimen/dp_200_dsa"
        android:layout_height="@dimen/dp_200_dsa"
        android:src="@drawable/ic_reset_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foregroundGravity="center"
        android:layout_marginStart="@dimen/dp_35_dsa"
        android:layout_marginTop="@dimen/dp_100_dsa"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:textSize="@dimen/sp_32_dsa"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/splash_screen_cl"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ic_resetPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_40_dsa"
        android:layout_marginTop="@dimen/dp_40_dsa"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="@dimen/sp_32_dsa"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/splash_screen_cl"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_40_dsa"
       />

    <EditText
        android:id="@+id/et_newPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50_dsa"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_marginTop="@dimen/dp_30_dsa"
        android:layout_marginHorizontal="@dimen/dp_30_dsa"
        android:hint="@string/new_password"
        android:padding="@dimen/dp_10_dsa"
        android:background="@drawable/login_edit_text_bg"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="@dimen/dp_15_dsa"
        android:singleLine="true"
        android:textColor="#2B2929"
        android:textSize="@dimen/sp_18_dsa"
        android:inputType="textPassword"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/et_confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50_dsa"
       app:layout_constraintTop_toBottomOf="@id/et_newPassword"
        android:layout_marginTop="@dimen/dp_15_dsa"
        android:background="@drawable/login_edit_text_bg"
        android:layout_marginHorizontal="@dimen/dp_30_dsa"
        android:hint="@string/confirm_new_password"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="@dimen/dp_15_dsa"
        android:padding="@dimen/dp_10_dsa"
        android:singleLine="true"
        android:textColor="#2B2929"
        android:textSize="@dimen/sp_18_dsa"
        android:inputType="textPassword"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/dp_300_dsa"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_21_dsa"
        android:background="@drawable/login_button_bg"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_new_password"
        android:layout_marginTop="@dimen/dp_40_dsa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>