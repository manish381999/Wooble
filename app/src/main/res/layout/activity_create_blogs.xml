<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Blogs.Create_BlogsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            android:background="@color/splash_screen_cl"
            app:title="Create Blogs">

            <Button
                android:id="@+id/publish"
                android:layout_width="@dimen/dp_110_dsa"
                android:layout_height="@dimen/dp_50_dsa"
                android:layout_gravity="end"
                android:background="@drawable/publish_btn_bg"
                android:textSize="@dimen/sp_19_dsa"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/dp_15_dsa"
                android:text="@string/publish"/>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/create_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55_dsa"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="@dimen/dp_10_dsa"
        android:autofillHints=""
        android:background="@drawable/blogs_edittext_bg"
        android:gravity="start|center_vertical"
        android:hint="@string/title_that_is_specific"
        android:inputType="text"
        android:padding="@dimen/dp_10_dsa"
        android:paddingTop="@dimen/dp_120_dsa"
        android:textColor="#182731"
        android:textSize="@dimen/sp_20_dsa"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout" />


    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_dsa"
        android:layout_margin="@dimen/dp_10_dsa"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@id/create_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="8dp" />






</androidx.constraintlayout.widget.ConstraintLayout>