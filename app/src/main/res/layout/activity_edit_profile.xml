<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_cl"
    android:elevation="10dp"
    tools:context=".ui.Profile.Edit_Profile_Activity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="30dp"
        android:layout_margin="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/light_black_color"/>


        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:background="@drawable/login_edit_text_bg"
            android:hint="@string/Wooble"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_number"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu"
            android:layout_marginTop="15dp"
            android:textColor="@color/light_black_color"/>

        <EditText
            android:id="@+id/et_mobileNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edit_text_bg"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:inputType="number"
            android:hint="9123456789"
            android:textColor="@color/black"
            android:padding="15dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_email"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu"
            android:layout_marginTop="15dp"
            android:textColor="@color/light_black_color"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edit_text_bg"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:hint="Woobile@gmail.com"
            android:textColor="@color/black"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu"
            android:layout_marginTop="15dp"
            android:textColor="@color/light_black_color"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edit_text_bg"
            android:layout_marginTop="15dp"
            android:hint="******"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="15dp"/>


        <Button
            android:id="@+id/bt_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Update"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button_bg"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ti_image_caption"
            android:layout_marginBottom="180dp"/>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>