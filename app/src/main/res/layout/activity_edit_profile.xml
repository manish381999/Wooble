<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/white"
    tools:context=".ui.Profile.Edit_Profile_Activity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scroll_bar"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/bt_clear"
                android:layout_width="@dimen/dp_30_dsa"
                android:layout_height="@dimen/dp_30_dsa"
                android:src="@drawable/ic_clear"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/dp_5_dsa"
                android:layout_marginEnd="@dimen/dp_15_dsa"
                android:contentDescription="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/main_textColor"
                android:textFontWeight="500"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/ubuntu"/>

            <ImageView
                android:id="@+id/bt_update"
                android:layout_width="@dimen/dp_30_dsa"
                android:layout_height="@dimen/dp_30_dsa"
                android:src="@drawable/ic_check"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_5_dsa"
                android:layout_marginEnd="@dimen/dp_15_dsa"
                android:contentDescription="@null" />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:id="@+id/scroll_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <ImageView
                android:id="@+id/cover_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140_dsa"
                android:src="@drawable/place_holder"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/add_cover_pic"
                android:layout_width="@dimen/dp_24_dsa"
                android:layout_height="@dimen/dp_24_dsa"
                android:src="@drawable/edit_2"
                android:elevation="@dimen/dp_10_dsa"
                app:layout_constraintBottom_toBottomOf="@+id/cover_pic"
                app:layout_constraintEnd_toEndOf="@+id/cover_pic"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="@+id/cover_pic"
                app:layout_constraintTop_toTopOf="@+id/cover_pic"
                app:layout_constraintVertical_bias="0.1"
                android:contentDescription="@null" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/dp_120_dsa"
                android:layout_height="@dimen/dp_120_dsa"
                android:src="@drawable/place_holder"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/dp_2_dsa"
                app:layout_constraintTop_toBottomOf="@id/cover_pic"
                app:layout_constraintStart_toStartOf="@id/cover_pic"
                app:layout_constraintEnd_toEndOf="@id/cover_pic"
                app:layout_constraintHorizontal_bias="0.05"
                android:layout_marginTop="@dimen/dp_40_minus_dsa"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/add_profile_pic"
                android:layout_width="@dimen/dp_40_dsa"
                android:layout_height="@dimen/dp_35_dsa"
                android:src="@drawable/ic_blogs"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/dp_2_dsa"
                android:padding="@dimen/dp_2_dsa"
                android:elevation="@dimen/dp_10_dsa"
                app:layout_constraintBottom_toBottomOf="@+id/profile_pic"
                app:layout_constraintEnd_toEndOf="@+id/profile_pic"
                app:layout_constraintHorizontal_bias="1.1"
                app:layout_constraintStart_toStartOf="@+id/profile_pic"
                app:layout_constraintTop_toTopOf="@+id/profile_pic"
                app:layout_constraintVertical_bias="0.9" />

            <TextView
                android:id="@+id/tv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textSize="@dimen/sp_12_dsa"
                android:lineHeight="14sp"
                android:textFontWeight="400"
                android:fontFamily="@font/ubuntu"
                app:layout_constraintTop_toBottomOf="@id/profile_pic"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/light_black_color"
                tools:targetApi="p" />

            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_dsa"
                android:layout_marginTop="@dimen/dp_8_dsa"
                android:textSize="@dimen/sp_18_dsa"
                android:background="@drawable/login_edit_text_bg"
                android:inputType="textPersonName"
                android:padding="@dimen/dp_15_dsa"
                android:textColor="@color/black"
                android:autofillHints=""
                app:layout_constraintTop_toBottomOf="@id/tv_full_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_18_dsa"
                android:layout_marginEnd="@dimen/dp_18_dsa"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/tv_mobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number"
                android:textSize="@dimen/sp_12_dsa"
                android:lineHeight="14sp"
                android:textFontWeight="400"
                android:fontFamily="@font/ubuntu"
                app:layout_constraintTop_toBottomOf="@id/et_full_name"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/light_black_color"
                tools:targetApi="p" />


            <EditText
                android:id="@+id/et_mobileNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_dsa"
                android:layout_marginTop="@dimen/dp_8_dsa"
                android:textSize="@dimen/sp_18_dsa"
                android:background="@drawable/login_edit_text_bg"
                android:inputType="phone"
                android:padding="@dimen/dp_15_dsa"
                android:textColor="@color/black"
                android:autofillHints=""
                app:layout_constraintTop_toBottomOf="@id/tv_mobileNo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_18_dsa"
                android:layout_marginEnd="@dimen/dp_18_dsa"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/sp_12_dsa"
                android:lineHeight="14sp"
                android:textFontWeight="400"
                android:fontFamily="@font/ubuntu"
                app:layout_constraintTop_toBottomOf="@id/et_mobileNo"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/light_black_color"
                tools:targetApi="p" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_dsa"
                android:layout_marginTop="@dimen/dp_8_dsa"
                android:textSize="@dimen/sp_18_dsa"
                android:background="@drawable/login_edit_text_bg"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp_15_dsa"
                android:textColor="@color/black"
                android:autofillHints=""
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_18_dsa"
                android:layout_marginEnd="@dimen/dp_18_dsa"
                tools:ignore="LabelFor" />


            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="@dimen/sp_12_dsa"
                android:lineHeight="14sp"
                android:textFontWeight="400"
                android:fontFamily="@font/ubuntu"
                app:layout_constraintTop_toBottomOf="@id/et_email"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/light_black_color"
                tools:targetApi="p" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_dsa"
                android:background="@drawable/login_edit_text_bg"
                android:layout_marginTop="@dimen/dp_8_dsa"
                android:textColorHint="@color/light_black_color"
                android:textSize="@dimen/sp_18_dsa"
                android:hint="@string/pass"
                android:textColor="@color/black"
                android:padding="@dimen/dp_15_dsa"
                android:autofillHints=""
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/tv_password"
                android:layout_marginStart="@dimen/dp_18_dsa"
                android:layout_marginEnd="@dimen/dp_18_dsa"
                />

