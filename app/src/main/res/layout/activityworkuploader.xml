    tools:context=".ui.Work.WorkUploaderActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="0dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/im_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:navigationIcon="@drawable/ic_back_btn"
            app:titleTextColor="@color/main_textColor"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:elevation="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Work"
                    android:textSize="@dimen/sp_16_dsa"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/secondary_textColor"
                    android:textFontWeight="1000"
                    android:layout_marginTop="@dimen/dp_15_dsa"
                    android:lineHeight="@dimen/sp_18_dsa"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center_vertical"
                    tools:targetApi="p" />


                <ImageButton
                    android:id="@+id/action_undo"
                    android:layout_width="@dimen/dp_30_dsa"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_undo"
                    android:layout_marginEnd="@dimen/dp_5_dsa"
                    app:layout_constraintEnd_toStartOf="@id/action_redo"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/dp_20_dsa"/>

                <ImageButton
                    android:id="@+id/action_redo"
                    android:layout_width="@dimen/dp_30_dsa"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_redo"
                    app:layout_constraintEnd_toStartOf="@id/btn_done"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/dp_20_dsa"
                    />



                <Button
                    android:id="@+id/btn_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="@color/done_text_color"
                    android:textSize="@dimen/sp_16_dsa"
                    android:lineHeight="@dimen/sp_18_dsa"
                    android:textFontWeight="1000"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/ubuntu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:targetApi="p" />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


