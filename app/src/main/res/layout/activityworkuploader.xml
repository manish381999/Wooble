            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/insideLinearlayout"
                android:layout_width="wrap_content"
