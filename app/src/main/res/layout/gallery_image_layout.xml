<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_10_dsa"
    android:elevation="@dimen/dp_5_dsa"
    android:layout_margin="@dimen/dp_10_dsa"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_1_dsa">

        <ImageView
            android:id="@+id/gll_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200_dsa"
            android:scaleType="fitCenter"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/light_black_color"
            android:fontFamily="@font/ubuntu"
            android:textSize="@dimen/sp_18_dsa"/>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>