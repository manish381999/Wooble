<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Gallery.GifUploaderActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/im_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:title="New Post"
            app:navigationIcon="@drawable/ic_back_btn"
            app:titleTextColor="@color/main_textColor"
            app:layout_constraintTop_toTopOf="parent">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/done_text_color"
                android:textSize="@dimen/sp_16_dsa"
                android:lineHeight="@dimen/sp_16_dsa"
                android:textFontWeight="1000"
                android:background="@android:color/transparent"
                android:fontFamily="@font/ubuntu"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp_5_dsa"
                android:gravity="center"
                android:textStyle="bold"
                tools:targetApi="p" />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_gif"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_235_dsa"
                android:src="@drawable/place_holder"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_15_dsa"
                android:layout_marginStart="@dimen/dp_10_dsa"
                android:layout_marginEnd="@dimen/dp_10_dsa"
                android:contentDescription="@null" />


            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Title"
                android:textColorHint="@color/main_textColor"
                android:textSize="@dimen/sp_16_dsa"
                android:lineHeight="@dimen/sp_18_dsa"
                android:background="@android:color/transparent"
                android:fontFamily="@font/ubuntu"
                android:textFontWeight="500"
                tools:targetApi="p"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/iv_gif"
                android:layout_marginTop="@dimen/dp_40_dsa"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_15_dsa"
                android:autofillHints="" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.0001dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/et_title"
                android:layout_marginTop="@dimen/dp_20_dsa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <EditText
                android:id="@+id/et_cation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write a caption..."
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/sp_16_dsa"
                android:lineHeight="@dimen/sp_18_dsa"
                android:background="@android:color/transparent"
                android:fontFamily="@font/ubuntu"
                android:textFontWeight="500"
                tools:targetApi="p"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/view1"
                android:layout_marginTop="@dimen/dp_40_dsa"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_15_dsa"
                android:autofillHints="" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.0001dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/et_cation"
                android:layout_marginTop="@dimen/dp_20_dsa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Location"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/sp_16_dsa"
                android:lineHeight="@dimen/sp_18_dsa"
                android:background="@android:color/transparent"
                android:fontFamily="@font/ubuntu"
                android:textFontWeight="500"
                tools:targetApi="p"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/view2"
                android:layout_marginTop="@dimen/dp_40_dsa"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_15_dsa"
                android:autofillHints="" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.0001dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/et_location"
                android:layout_marginTop="@dimen/dp_20_dsa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>







        </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>