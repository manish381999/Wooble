<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Project.Project_Viewer_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10_dsa"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_15_dsa"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="@string/project_name"
                android:textColor="@color/light_black_color"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18_dsa" />

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dp_8_dsa"
                android:layout_marginTop="@dimen/dp_5_dsa"
                android:textSize="@dimen/sp_18_dsa"
                android:padding="@dimen/dp_10_dsa"
                android:textColor="@color/black"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aim_of_project"
                android:textSize="@dimen/sp_18_dsa"
                android:layout_marginTop="@dimen/dp_15_dsa"
                android:fontFamily="@font/ubuntu"
                android:textStyle="bold"
                android:textColor="@color/light_black_color"/>

            <TextView
                android:id="@+id/tv_project_aim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5_dsa"
                android:elevation="@dimen/dp_8_dsa"
                android:padding="@dimen/dp_10_dsa"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18_dsa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="@dimen/sp_18_dsa"
                android:layout_marginTop="@dimen/dp_15_dsa"
                android:fontFamily="@font/ubuntu"
                android:textStyle="bold"
                android:textColor="@color/light_black_color"/>


            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5_dsa"
                android:elevation="@dimen/dp_8_dsa"
                android:fontFamily="@font/ubuntu"
                android:padding="@dimen/dp_10_dsa"
                android:textColor="@color/light_black_color"
                android:textSize="@dimen/sp_18_dsa"
               />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_dsa"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_marginTop="@dimen/dp_15_dsa">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/dp_0_dsa"
                    android:layout_height="@dimen/dp_150_dsa"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/place_holder"
                    app:riv_border_color="#333333"
                    app:riv_border_width="2dip"
                    app:riv_corner_radius="@dimen/dp_10_dsa"
                    android:visibility="visible"
                    app:riv_mutate_background="true"
                    tools:ignore="NestedWeights" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageView2"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_0_dsa"
                    android:layout_height="@dimen/dp_150_dsa"
                    android:src="@drawable/place_holder"
                    app:riv_corner_radius="@dimen/dp_10_dsa"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/dp_10_dsa"
                    android:scaleType="centerCrop"
                    app:riv_mutate_background="true"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageView3"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_0_dsa"
                    android:layout_height="@dimen/dp_150_dsa"
                    android:src="@drawable/place_holder"
                    app:riv_corner_radius="@dimen/dp_10_dsa"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    android:layout_marginStart="@dimen/dp_10_dsa"
                    android:visibility="visible"
                    android:scaleType="centerCrop"
                    app:riv_mutate_background="true"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_dsa"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_marginTop="@dimen/dp_15_dsa">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageView4"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/place_holder"
                    app:riv_corner_radius="@dimen/dp_10_dsa"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    android:layout_height="@dimen/dp_150_dsa"
                    android:visibility="visible"
                    app:riv_mutate_background="true"
                    android:layout_width="@dimen/dp_0_dsa"
                    tools:ignore="NestedWeights" />


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageView5"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_0_dsa"
                    android:layout_height="@dimen/dp_150_dsa"
                    android:src="@drawable/place_holder"
                    app:riv_corner_radius="@dimen/dp_10_dsa"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/dp_10_dsa"
                    android:scaleType="centerCrop"
                    app:riv_mutate_background="true"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageView6"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_0_dsa"
                    android:layout_height="@dimen/dp_150_dsa"
                    android:src="@drawable/place_holder"
                    app:riv_corner_radius="@dimen/dp_10_dsa"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    android:layout_marginStart="@dimen/dp_10_dsa"
                    android:visibility="visible"
                    android:scaleType="centerCrop"
                    app:riv_mutate_background="true"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="@dimen/dp_15_dsa">
                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/exo_play"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200_dsa"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/show_pdf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100_dsa"
                android:layout_gravity="center"
                android:elevation="@dimen/dp_8_dsa"
                app:cardCornerRadius="@dimen/dp_15_dsa"
                android:layout_marginTop="@dimen/dp_20_dsa">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    android:background="@color/light_white">

                    <ImageView
                        android:layout_width="@dimen/dp_64_dsa"
                        android:layout_height="@dimen/dp_64_dsa"
                        android:background="@drawable/circle_red"
                        android:padding="@dimen/dp_15_dsa"
                        android:layout_gravity="center_vertical|start"
                        android:src="@drawable/ic_pdf"
                        android:layout_marginStart="@dimen/dp_8_dsa"
                        android:contentDescription="@null" />


                    <View
                        android:layout_width="@dimen/dp_1_dsa"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_5_dsa"
                        android:background="@drawable/view_background"
                       />


                    <TextView
                        android:id="@+id/pdf_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/dp_5_dsa"
                        android:textSize="@dimen/sp_18_dsa"
                        android:layout_marginStart="@dimen/dp_5_dsa"
                        android:textColor="@color/light_black_color"/>




                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conclusion"
                android:textSize="@dimen/sp_18_dsa"
                android:layout_marginTop="@dimen/dp_20_dsa"
                android:fontFamily="@font/ubuntu"
                android:textStyle="bold"
                android:textColor="@color/light_black_color"/>

            <TextView
                android:id="@+id/tv_conclusion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dp_8_dsa"
                android:layout_marginTop="@dimen/dp_5_dsa"
                android:textSize="@dimen/sp_18_dsa"
                android:padding="@dimen/dp_10_dsa"
                android:textColor="@color/black"
                android:importantForAutofill="no"
                android:layout_marginBottom="@dimen/dp_30_dsa"/>






        </LinearLayout>



    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>