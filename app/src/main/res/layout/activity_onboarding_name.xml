<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_bg"
    android:backgroundTint="@null"
    tools:context=".ui.Onboarding.Onboarding_name_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ic_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group"
                android:layout_marginTop="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_im"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/ubuntu"
                android:lineHeight="25sp"
                android:text="I'm"
                android:textColor="#FFFFFF"
                android:textFontWeight="700"
                android:textSize="25sp"
                android:textStyle="italic|bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_group"
                tools:targetApi="p" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_im"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:hint="Your Name "
                android:inputType="textPersonName"
                android:textColorHint="#66FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textColor="#CCFFFFFF"
                android:textFontWeight="500"
                android:textSize="25sp"
                android:lineHeight="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="60dp"
                android:autofillHints=""
                tools:targetApi="p" />


            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_name"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:textColor="#99FFFFFF"
                android:text="This Is Your Portfolio's Name So We Can Customize It A \nBit More. No Stress, You Can Change This Later Anytime"
                android:textSize="14sp"
                android:lineHeight="20sp"
                android:padding="2dp"
                android:fontFamily="@font/ubuntu"
                tools:targetApi="p" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_next"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:background="@drawable/next_btn_bg"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                android:text="Next"
                android:textColor="#E6FFFFFF"
                android:textStyle="bold"
                android:padding="5dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textFontWeight="500"
                android:lineHeight="30sp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                tools:targetApi="p" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>