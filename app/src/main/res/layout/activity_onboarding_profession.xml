<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_bg"
    android:backgroundTint="@null"
    tools:context=".ui.Onboarding.Onboarding_profession_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ic_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group2"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"/>


            <TextView
                android:id="@+id/tv_im"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="italic|bold"
                android:textFontWeight="700"
                android:lineHeight="25sp"
                android:fontFamily="@font/ubuntu"
                app:layout_constraintTop_toBottomOf="@id/ic_group"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="25dp"
                tools:targetApi="p" />


            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_im"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:hint="Your Profession"
                android:inputType="textPersonName"
                android:textColorHint="#66FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textColor="#CCFFFFFF"
                android:textFontWeight="500"
                android:textSize="25sp"
                android:lineHeight="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="70dp"
                android:autofillHints=""
                tools:targetApi="p" />


            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_name"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:textColor="#99FFFFFF"
                android:textSize="14sp"
                android:text="Be as specific as possible so we can give you the best \nand most personalized experience. Below some \nexamples."
                android:lineHeight="20sp"
                android:padding="2dp"
                android:fontFamily="@font/ubuntu"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; Photographer"
                android:textColor="#7C97C1"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; Illustrator"
                android:textColor="#7C97C1"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; Concept Artist"
                android:textColor="#7C97C1"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; Industrial Designer"
                android:textColor="#7C97C1"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; Graphic Designer"
                android:textColor="#7C97C1"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; 3D Designer"
                android:textColor="#7C97C1"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv7"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; UX Designer"
                android:textColor="#7C97C1"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv8"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; Architect"
                android:textColor="#7C97C1"
                tools:targetApi="p" />

            <TextView
                android:id="@+id/tv10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv9"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:lineHeight="20sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:text="&#8226; Motion Designer"
                android:textColor="#7C97C1"
                tools:targetApi="p" />




            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_next"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/next_btn_bg"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                android:text="Next"
                android:textColor="#E6FFFFFF"
                android:textStyle="bold"
                android:padding="5dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textFontWeight="500"
                android:lineHeight="30sp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv10"
                tools:targetApi="p" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>