<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_15_dsa"
    android:layout_marginHorizontal="@dimen/dp_15_dsa"
    android:layout_marginVertical="@dimen/dp_15_dsa"
    app:cardElevation="@dimen/dp_10_dsa">

    <LinearLayout
        android:id="@+id/Rv_project_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_10_dsa"
            android:layout_marginEnd="@dimen/dp_10_dsa"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/dp_25_dsa"
                android:layout_height="@dimen/dp_25_dsa"
                android:src="@drawable/edit_2"
                android:elevation="@dimen/dp_10_dsa"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_delete"
                android:contentDescription="@null" />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textStyle="bold"
            android:padding="@dimen/dp_10_dsa"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10_dsa"
            android:textColor="@color/light_black_color"
            android:fontFamily="@font/ubuntu"
            android:maxLength="70"
            android:textSize="@dimen/sp_20_dsa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/dp_8_dsa"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/project_aim"
                android:padding="@dimen/dp_10_dsa"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:textSize="@dimen/sp_18_dsa"/>

            <TextView
                android:id="@+id/tv_project_aim"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10_dsa"
                android:layout_gravity="start"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:maxLength="70"
                android:textSize="@dimen/sp_18_dsa"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/dp_8_dsa"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/description1"
                android:padding="@dimen/dp_10_dsa"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:textSize="@dimen/sp_18_dsa"/>

            <TextView
                android:id="@+id/tv_project_description"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10_dsa"
                android:layout_gravity="start"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:maxLength="240"
                android:textSize="@dimen/sp_18_dsa"/>
        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>