<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_10_dsa"
    android:layout_margin="@dimen/dp_8_dsa"
    android:elevation="@dimen/dp_10_dsa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginVertical="@dimen/dp_10_dsa"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/light_black_color"
            android:fontFamily="@font/ubuntu"
            android:textSize="@dimen/sp_18_dsa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/dp_8_dsa"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="project aim :"
                android:padding="@dimen/dp_10_dsa"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:textSize="@dimen/sp_18_dsa"/>

            <TextView
                android:id="@+id/tv_project_aim"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10_dsa"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:textSize="@dimen/sp_18_dsa"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/dp_8_dsa"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Description :"
                android:padding="@dimen/dp_10_dsa"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:textSize="@dimen/sp_18_dsa"/>

            <TextView
                android:id="@+id/tv_project_description"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:padding="@dimen/dp_10_dsa"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:textSize="@dimen/sp_18_dsa"/>
        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>