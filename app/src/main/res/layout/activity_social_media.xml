<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Social_media_Activity">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_with_us"
            android:textColor="@color/splash_screen_cl"
            android:fontFamily="@font/ubuntu"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_50_dsa"
            android:textSize="@dimen/sp_32_dsa"
            app:drawableStartCompat="@drawable/ic_connect_without_contact_"
            android:drawablePadding="@dimen/dp_10_dsa"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/dp_50_dsa"
            android:orientation="horizontal">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/instagram"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_200_dsa"
                app:cardElevation="@dimen/dp_8_dsa"
                android:layout_marginHorizontal="@dimen/dp_10_dsa"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/dp_10_dsa"
                android:layout_margin="@dimen/dp_20_dsa"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/light_white"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_74_dsa"
                        android:layout_height="@dimen/dp_74_dsa"
                        android:background="@drawable/circle_white"
                        android:padding="@dimen/dp_15_dsa"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_instagram"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1_dsa"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/dp_10_dsa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instagram"
                        android:textStyle="bold"
                        android:padding="@dimen/dp_5_dsa"
                        android:layout_marginTop="@dimen/dp_10_dsa"
                        android:textSize="@dimen/sp_18_dsa"
                        android:textColor="@color/light_black_color"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/facebook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_200_dsa"
                app:cardElevation="@dimen/dp_8_dsa"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/dp_10_dsa"
                app:cardCornerRadius="@dimen/dp_10_dsa"
                android:layout_margin="@dimen/dp_20_dsa"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/light_white"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_74_dsa"
                        android:layout_height="@dimen/dp_74_dsa"
                        android:background="@drawable/circle_white"
                        android:padding="@dimen/dp_15_dsa"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_facebook"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1_dsa"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/dp_10_dsa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/facebook"
                        android:textStyle="bold"
                        android:padding="@dimen/dp_5_dsa"
                        android:layout_marginTop="@dimen/dp_10_dsa"
                        android:textSize="@dimen/sp_18_dsa"
                        android:textColor="@color/light_black_color"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/dp_20_dsa"
            android:orientation="horizontal">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/twitter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_200_dsa"
                app:cardElevation="@dimen/dp_8_dsa"
                android:layout_marginHorizontal="@dimen/dp_10_dsa"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/dp_10_dsa"
                android:layout_margin="@dimen/dp_20_dsa"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/light_white"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_74_dsa"
                        android:layout_height="@dimen/dp_74_dsa"
                        android:background="@drawable/circle_white"
                        android:padding="@dimen/dp_15_dsa"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_twitter"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1_dsa"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/dp_10_dsa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twitter"
                        android:textStyle="bold"
                        android:padding="@dimen/dp_5_dsa"
                        android:layout_marginTop="@dimen/dp_10_dsa"
                        android:textSize="@dimen/sp_18_dsa"
                        android:textColor="@color/light_black_color"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/linkedIn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_200_dsa"
                app:cardElevation="@dimen/dp_8_dsa"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/dp_10_dsa"
                app:cardCornerRadius="@dimen/dp_10_dsa"
                android:layout_margin="@dimen/dp_20_dsa"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/light_white"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_74_dsa"
                        android:layout_height="@dimen/dp_74_dsa"
                        android:background="@drawable/circle_white"
                        android:padding="@dimen/dp_15_dsa"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_linkedin"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1_dsa"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/dp_10_dsa"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/linkedin"
                        android:textStyle="bold"
                        android:padding="@dimen/dp_5_dsa"
                        android:textSize="@dimen/sp_18_dsa"
                        android:layout_marginTop="@dimen/dp_10_dsa"
                        android:textColor="@color/light_black_color"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>