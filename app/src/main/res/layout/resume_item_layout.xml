<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pdf_viewer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100_dsa"
        app:cardElevation="@dimen/dp_15_dsa"
        android:layout_marginHorizontal="@dimen/dp_10_dsa"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_80_dsa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/dp_10_dsa"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/light_white"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_64_dsa"
                android:layout_height="@dimen/dp_64_dsa"
                android:background="@drawable/circle_red"
                android:padding="@dimen/dp_15_dsa"
                android:layout_marginStart="@dimen/dp_10_dsa"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_resume"/>


            <View
                android:layout_width="@dimen/dp_1_dsa"
                android:layout_height="match_parent"
                android:background="@drawable/view_background"
                android:layout_marginStart="@dimen/dp_10_dsa"/>

            <TextView
                android:id="@+id/tv_pdf_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50_dsa"
                android:textColor="@color/light_black_color"
                android:fontFamily="@font/ubuntu"
                android:textSize="@dimen/sp_18_dsa"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_10_dsa"/>

            <ImageView
                android:id="@+id/pdf_download"
                android:layout_width="@dimen/dp_35_dsa"
                android:layout_height="@dimen/dp_35_dsa"
                android:src="@drawable/ic_downloading"
                android:layout_gravity="center"
                android:layout_marginStart="-40dp"
                android:contentDescription="@null" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>